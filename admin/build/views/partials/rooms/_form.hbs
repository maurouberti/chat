<div class="form-group">
    <label for="name">Nome</label>
    <input type="text" name="name" placeholder="Entre com o nome" class="form-control" value="{{ room.name }}">
</div>

<div class="form-group">
    <label for="description">descrição</label>
    <input type="text" name="description" placeholder="Entre com a descrição" class="form-control" value="{{ room.description }}">
</div>

<div class="form-group">
    <label for="enable">Situação</label>
    <input type="checkbox" name="enable" value="{{ room.enable }}" {{checkedIf room.enable}} />
    <label for="enable">
        Ativo/Desativo?
    </label>
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Gravar</button>
</div>
