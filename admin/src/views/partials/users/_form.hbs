<div class="form-group">
    <label for="name">Nome</label>
    <input type="text" name="name" placeholder="Entre com o nome" class="form-control" value="{{ user.name }}">
</div>
<div class="form-group">
    <label for="email">E-mail</label>
    <input type="email" name="email" placeholder="Entre com o e-mail" class="form-control" value="{{ user.email }}">
</div>
<div class="form-group">
    <label for="password">Senha</label>
    <input type="password" name="password" placeholder="Entre com a senha" class="form-control" value="{{ user.password }}">
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Gravar</button>
</div>
